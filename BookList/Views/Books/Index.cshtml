
@{
    ViewBag.Title = "AllBooks";
}

<h2>Books</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Books.Count; i++)
        {
        <tr>
            <td>@(Model.Books[i].Title + " By " + Model.Books[i].Author)</td>

            
        </tr>
        }
    </tbody>
</table>

<div class="col-sm-12">
    @Html.ActionLink("Add Book", "BooksAdd", null, new { @class = "btn btn-primary" })
</div>