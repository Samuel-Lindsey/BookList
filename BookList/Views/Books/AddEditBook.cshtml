@model BookList.Models.BooksViewModel
@{
   
        var isEditMode = Model.BookId != null;
        ViewBag.Title = isEditMode ? "Edit " + Model.Title : "Add Books";
    }
   


<h2>@Model.Title</h2>

<div class="row">
    <div class="col-sm-6 col-xs-10">
        @using (Html.BeginForm(isEditMode ? "EditBooks" : "AddBooks", "Books"))
        {
            @Html.HiddenFor(m => m.BookId)
            <div class="form-group">
                @Html.LabelFor(m => m.Title)
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Author)
                @Html.TextBoxFor(m => m.Author, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">@(isEditMode ? "Save" : "Add")</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        }
        </div>
    </div>
