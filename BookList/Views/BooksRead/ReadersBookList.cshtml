@*@model BookList.Models.BooksRead*@
@{
    ViewBag.Title = "ReadersBookList";
}

<h2>@(Model.BooksRead[0].Readers.Name)</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.BooksRead.Count; i++)
        {
            <tr>
                <td>
                    @(Model.BooksRead[i].Books.Title + ": By " + Model.BooksRead[i].Books.Author)
                    <a data-toggle="modal" href="@("#DeleteBookReadModal" + i)">Delete</a>
                    <div class="modal fade" id="@("DeleteBookReadModal" + i)" tabindex="-1" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                @using (Html.BeginForm("DeleteBookRead", "BooksRead"))
                                { 

                                    <input type="hidden" value="@Model.BooksRead[i].BRId" name="BRId" />
                                    <input type="hidden" value=" @Model.BooksRead[i].Readers.ReaderId" name="ReaderId" />
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">Delete @Model.BooksRead[i].Books.Title</h4>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete @Model.BooksRead[i].Books.Title?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">Yes</button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                    </div>
                                  }
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
         }
    </tbody>
</table>

<div class="col-sm-12">
   @Html.ActionLink("Add Book", "ReadBooksAdd", new { ReaderId = Model.ReaderId }, new { @class = "btn btn-primary" })
    
</div>




